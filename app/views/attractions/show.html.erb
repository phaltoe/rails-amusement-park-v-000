<div>
  <li>Name: <%= @attraction.name %></li>
  <li>Ticket Requirement: <%= @attraction.tickets %></li>
  <li>Height Requirement: <%= @attraction.min_height %></li>
  <li>Nausea Rating: <%= @attraction.nausea_rating %></li>
  <li>Happiness Rating: <%= @attraction.happiness_rating %></li>
  <li>
    <%= button_to "Go on this ride", rides_path, params: {user_id: current_user, attraction_id: @attraction.id} if !User.find(current_user).admin? %>    
  </li>
</div>


<%= link_to "Back", attractions_path %>

<% if current_user.admin? %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
<% end %>  
