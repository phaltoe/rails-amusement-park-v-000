<div>
  <%= form_for(@user) do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :happiness %>
      <%= f.number_field :happiness %>
    </div>
    <div>
      <%= f.label :nausea %>
      <%= f.number_field :nausea %>
    </div>
    <div>
      <%= f.label :tickets %>
      <%= f.number_field :tickets %>
    </div>
    <div>
      <%= f.label :height %>
      <%= f.number_field :height %>
    </div>
    <div>
      <%= f.label :admin %>
      <%= f.check_box :admin %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>